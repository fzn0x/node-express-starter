{
  "name": "aksara",
  "version": "1.0.0",
  "description": "An Opinionated Boilerplate for Node.js",
  "scripts": {
    "prod": "cross-env NODE_ENV=prod node --trace-warnings ./bin/www",
    "dev": "cross-env NODE_ENV=dev nodemon ./bin/www -L",
    "server:socket": "node ./core/socket.js",
    "server:redis": "redis-server",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint --fix \"**/*.js\"",
    "lint:style": "npx stylelint \"**/*.css\"",
    "test": "mocha --file \"./lib/test/setup.js\" \"./test/**/*.spec.js\" --reporter spec --timeout 30000 --exit",
    "swagger:edit": "cross-env swagger_swagger_fileName=./documentation/swagger/swagger.yaml swagger project edit",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "bull": "^3.22.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express-fileupload": "^1.2.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.6.0",
    "socket.io-client": "^4.0.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "bent": "^7.3.12",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.1",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.7",
    "prettier": "2.3.2",
    "redis": "^3.1.2",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "socket.io": "^4.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "swagger": "^0.7.5",
    "swagger-editor": "^3.17.0"
  },
  "lint-staged": {
    "*.{js}": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write",
    "*.js": "eslint --cache --fix"
  }
}
